<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Sightful.Avalonia.Demo.App"
             xmlns:local="using:Sightful.Avalonia.Demo"
             xmlns:treeDataGridTheme="clr-namespace:Sightful.Avalonia.TreeDataGrid;assembly=Sightful.Avalonia.TreeDataGrid"
             RequestedThemeVariant="Dark">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
	    <StyleInclude Source="avares://Sightful.Avalonia/SightfulTheme.axaml"/>
	    <treeDataGridTheme:SightfulTreeDataGridTheme/>
        <StyleInclude Source="avares://Sightful.Avalonia.Controls/MultiSlider.axaml"/>
        <StyleInclude Source="avares://Sightful.Avalonia.Controls.GestureBox/GestureBox.axaml"/>
        <StyleInclude Source="avares://Sightful.Avalonia.Controls.ZoomViewer/ZoomViewer.axaml"/>
    </Application.Styles>
</Application>