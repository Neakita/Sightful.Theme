<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style Selector="Grid.tiny-spacing">
        <Setter Property="ColumnSpacing" Value="4"/>
        <Setter Property="RowSpacing" Value="4"/>
    </Style>
    <Style Selector="Grid.small-spacing">
        <Setter Property="ColumnSpacing" Value="8"/>
        <Setter Property="RowSpacing" Value="8"/>
    </Style>
    <Style Selector="Grid.regular-spacing">
        <Setter Property="ColumnSpacing" Value="12"/>
        <Setter Property="RowSpacing" Value="12"/>
    </Style>
    <Style Selector="Grid.medium-spacing">
        <Setter Property="ColumnSpacing" Value="16"/>
        <Setter Property="RowSpacing" Value="16"/>
    </Style>
</Styles>
