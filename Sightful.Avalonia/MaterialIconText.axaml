<ResourceDictionary xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:icons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
        xmlns:local="clr-namespace:Sightful.Avalonia">
    <Design.PreviewWith>
        <local:MaterialIconText Height="20" Kind="Abacus" Text="This is abacus!"/>
    </Design.PreviewWith>

    <ControlTheme x:Key="{x:Type local:MaterialIconText}" TargetType="local:MaterialIconText">
        <Setter Property="Spacing" Value="10"/>
        <Setter Property="Template">
            <ControlTemplate>
                <StackPanel Orientation="Horizontal"
                            Spacing="{TemplateBinding Spacing}">
                    <icons:MaterialIcon Kind="{TemplateBinding Kind}"
                                        VerticalAlignment="Center"
                                        Width="{TemplateBinding IconSize}"
                                        Height="{TemplateBinding IconSize}"/>
                    <TextBlock Text="{TemplateBinding Text}"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </ControlTemplate>
        </Setter>
    </ControlTheme>
</ResourceDictionary>